<Module>
<ModulePrefs title="survey gizmo" />
<Content type="html"><![CDATA[


  <script type="text/javascript">
function getHtml() {    
  var params = {};  
  params[gadgets.io.RequestParameters.CONTENT_TYPE] = gadgets.io.ContentType.TEXT;  
  
 var url = "http://restapi.surveygizmo.com/v1/Survey?_method=PUT&user:pass=sgizmosap@gmail.com:sapgizmo&type=survey&title=DNS survey";

  gadgets.io.makeRequest(url, response, params);
};
function response(obj) {  
  //obj.text contains the text of the page that was requested  
  var str = obj.text;
  var html =  str.substr(0,400);  
  document.getElementById('waiting').innerHTML = html;


};
gadgets.util.registerOnLoadHandler(getHtml);
</script>
<div id="waiting">
    Please click
    once you've approved access to your data.
  </div>
